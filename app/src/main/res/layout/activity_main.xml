<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C6CC"
    android:orientation="vertical"

    android:scrollbars="vertical">
<include layout="@layout/app_bar"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <LinearLayout
                android:background="#C0C6CC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >


                <EditText
                    android:drawableRight="@drawable/ic_action_search"
                    android:textColor="#494949"
                    android:text="Delhi"
                    android:id="@+id/edittext_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text" />


            </LinearLayout>



            <LinearLayout
                android:background="#C0C6CC"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical" >



                <TextView
                    android:padding="8dp"
                    android:textColor="@color/primarColor"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/mainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />


                <LinearLayout

                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="0.75"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/imageview_weather_info_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/txtWeather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:textSize="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/primarColor"
                            android:id="@+id/txtTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:drawablePadding="4dp"
                            android:drawableLeft="@drawable/current_date"

                            android:text="Wind"
                            android:id="@+id/txtWindDirection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:drawablePadding="4dp"
                            android:drawableLeft="@drawable/wind_speed"
                            android:text="Wind"
                            android:id="@+id/txtWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:drawablePadding="4dp"
                            android:drawableLeft="@drawable/wind_direction"
                            android:text="Wind"
                            android:id="@+id/txtWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:drawablePadding="4dp"
                            android:drawableLeft="@drawable/visbility"

                            android:text="Wind"
                            android:id="@+id/txtVisibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:drawablePadding="4dp"
                            android:drawableLeft="@drawable/humidity"

                            android:text="Wind"
                            android:id="@+id/txtHumidty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/primarColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout

                android:id="@+id/weather_infos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"

            ads:adUnitId="ca-app-pub-1878227272753934/6884990405" />
    </RelativeLayout>

</LinearLayout>
