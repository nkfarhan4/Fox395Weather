<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/primarColor"
    android:layout_width="match_parent"
    app:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/primarColor2"
        android:gravity="center_vertical"
        android:id="@+id/toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgSettings"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_navigation_more_vert"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ic_location"
        android:layout_marginRight="16dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_location"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="16dp"
        android:text="\u2103"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:id="@+id/txtTempMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.Toolbar><!-- From: file:/D:/AndroidProjects/WeatherExpert2/app/src/main/res/layout/app_bar.xml -->